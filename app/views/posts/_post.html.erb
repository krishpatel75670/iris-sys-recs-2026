<div id="<%= dom_id post %>" class="card mb-4">
  <% if post.header_image.attached? %>
    <%= image_tag post.header_image, class: 'd-block w-100', style: 'height: 400px; object-fit: cover;' %>
  <% end %>
  
  <div class="card-body">
    <h2 class="card-title mb-3"><%= post.title %></h2>
    
    <div class="card-text text-muted mb-4">
      <%= simple_format(post.body) %>
    </div>

    <% if post.files.any? %>
      <div class="mt-4 pt-4 border-top">
        <h5 class="mb-3">Resources & Downloads</h5>
        <ul class="list-group">
          <% post.files.each do |file| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= link_to file.filename, rails_blob_path(file, disposition: "attachment") %>
              <span class="text-muted small"><%= number_to_human_size(file.byte_size) %></span>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
