<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">Posts</h1>
  <%= link_to "New post", new_post_path, class: 'btn btn-primary' %>
</div>

<% if @posts.any? %>
  <div class="row" id="posts">
    <% @posts.each do |post| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100">
          <% if post.header_image.attached? %>
            <%= image_tag post.header_image, class: 'd-block w-100', style: 'height: 200px; object-fit: cover;' %>
          <% else %>
            <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
              <span>No Image</span>
            </div>
          <% end %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-text text-muted flex-grow-1"><%= truncate(post.body, length: 100) %></p>
            <div class="d-flex gap-2">
              <%= link_to "View", post, class: 'btn btn-sm btn-outline-primary' %>
              <% if user_signed_in? %>
                <%= link_to "Edit", edit_post_path(post), class: 'btn btn-sm btn-outline-secondary' %>
                <%= button_to "Delete", post, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-sm btn-outline-danger' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="alert alert-info" role="alert">
    <h4 class="alert-heading">No posts yet</h4>
    <p>Start by creating your first post!</p>
  </div>
<% end %>
